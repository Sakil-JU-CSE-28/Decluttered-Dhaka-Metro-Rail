<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Enabled state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="?attr/colorPrimary" /> <!-- Use a color attribute for dynamic theming -->
            <padding android:left="8dp" android:right="8dp" android:top="4dp" android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="?attr/colorOnSurface" /> <!-- Use a color attribute for dynamic theming -->
            <padding android:left="8dp" android:right="8dp" android:top="4dp" android:bottom="4dp"/>
        </shape>
    </item>
</selector>
