<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InDangerActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3F51B5"
        android:elevation="4dp"
        app:title="Metro Rail Services"
        app:titleTextColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Button to contact security guard -->
    <Button
        android:id="@+id/button_contact_security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact with Security Guard"
        app:layout_constraintBottom_toTopOf="@+id/button_call_police"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <!-- Button to call police -->
    <Button
        android:id="@+id/button_call_police"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Police"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_contact_security"
        app:layout_constraintVertical_bias="0.4" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationViewIndanger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        app:menu="@menu/bottom_nab_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
